<script>
  import { $ } from '@/utils/functions';
  import {
    createPlaylist,
    existsPlaylist,
    FAVORITE_SLUG,
    getPlaylistName,
    updateListOfSongsItemsAfterAnUpdateOrDelete
  } from '@/utils/localStorage';

  //Add To A Playlist Icon
  document.addEventListener('click', e => {
    const target = e.target as HTMLElement;

    if (target.matches('.row') || target.matches('.row *')) {
      const playlistEmpty = target.querySelector('.playlistEmpty') as HTMLElement;
      playlistEmpty.classList.toggle('isSavedInPlaylist');
    }
  });

  //Init State That a playlist don't delete itself
  localStorage.setItem('the-song-item-deletes-itself', 'false');

  //Storage Event
  const favoriteBrands = getPlaylistName(FAVORITE_SLUG);
  window.addEventListener('storage', e => {
    if (e.key === favoriteBrands) {
      updateListOfSongsItemsAfterAnUpdateOrDelete();
    }
  });

  //LocalStorage
  if (!existsPlaylist(FAVORITE_SLUG)) {
    const jsonFavoriteBrands = JSON.stringify([]);
    createPlaylist(FAVORITE_SLUG, jsonFavoriteBrands);
  }

  const profile = $('.profile.openLogin') as HTMLElement;
  profile?.addEventListener('click', e => {
    const $signinButton = $('.buttonModalSignin') as HTMLElement;
    setTimeout(() => {
      $signinButton.click();
    }, 5);
  });

  // Hidden Nav if not have focus
  setTimeout(() => {
    const profileButton = $('.profile-open-manage-and-logout') as HTMLElement;
    profileButton?.addEventListener('click', e => {
      setTimeout(() => {
        const profileNavManageAndSignOut = $(
          '.cl-userButtonPopoverCard.cl-popoverBox.cl-userButton-popover'
        ) as HTMLElement;

        profileNavManageAndSignOut?.addEventListener(
          'pointerout',
          (e: PointerEvent) => {
            const targetElement = e.relatedTarget as HTMLElement;
            if (!profileNavManageAndSignOut.contains(targetElement)) {
              const $buttonHidden = $(
                '.hidden-button-for-remove-nav-on-pointerout'
              ) as HTMLButtonElement;

              const evt = new PointerEvent('pointerdown', { bubbles: true });
              $buttonHidden.dispatchEvent(evt);
            }
          }
        );
      }, 15);
    });
  }, 100);

  window.addEventListener('resize', e => {
    document.title = `${window.innerWidth}`;
  });
</script>
